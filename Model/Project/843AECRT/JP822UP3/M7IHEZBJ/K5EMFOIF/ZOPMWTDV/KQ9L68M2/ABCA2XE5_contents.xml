<?xml version="1.0" encoding="UTF-8"?><policy>
	<rule>
		<description>AccountTracking - disregard if disabled or wrong object class</description>
		<conditions>
			<and/>
		</conditions>
		<actions>
			<do-if>
				<arg-conditions>
					<and>
						<if-global-variable mode="nocase" name="drv.acctTrk.enable" op="not-equal">true</if-global-variable>
					</and>
				</arg-conditions>
				<arg-actions>
					<do-break/>
				</arg-actions>
				<arg-actions>
					<do-if>
						<arg-conditions>
							<and>
								<if-class-name op="available"/>
							</and>
						</arg-conditions>
						<arg-actions>
							<do-for-each>
								<arg-node-set>
									<token-global-variable name="drv.acctTrk.objectClass"/>
								</arg-node-set>
								<arg-actions>
									<do-if>
										<arg-conditions>
											<and>
												<if-class-name mode="nocase" op="equal">$current-node$</if-class-name>
											</and>
										</arg-conditions>
										<arg-actions>
											<do-set-local-variable name="pass" scope="policy">
												<arg-string>
													<token-text xml:space="preserve">true</token-text>
												</arg-string>
											</do-set-local-variable>
										</arg-actions>
										<arg-actions/>
									</do-if>
								</arg-actions>
							</do-for-each>
							<do-if>
								<arg-conditions>
									<and>
										<if-local-variable name="pass" op="not-available"/>
									</and>
								</arg-conditions>
								<arg-actions>
									<do-break/>
								</arg-actions>
								<arg-actions/>
							</do-if>
						</arg-actions>
						<arg-actions/>
					</do-if>
				</arg-actions>
			</do-if>
		</actions>
	</rule>
	<rule>
		<description>AccountTracking - on add-association sync the operation-properties to status operations</description>
		<conditions>
			<and>
				<if-operation mode="case" op="equal">add-association</if-operation>
			</and>
		</conditions>
		<actions>
			<do-set-op-property name="AccountTracking-association">
				<arg-string>
					<token-xpath expression="text()"/>
				</arg-string>
			</do-set-op-property>
			<do-set-local-variable name="eventId" scope="policy">
				<arg-string>
					<token-xpath expression="@event-id"/>
				</arg-string>
			</do-set-local-variable>
			<do-clone-xpath dest-expression="//status/operation-data" src-expression="operation-data/@AccountTracking-association"/>
		</actions>
	</rule>
	<rule>
		<description>AccountTracking - Query for destination DN using Association</description>
		<conditions>
			<and>
				<if-operation mode="regex" op="equal">modify|delete|move|rename</if-operation>
				<if-op-property name="AccountTracking-Operation" op="not-available"/>
				<if-association op="available"/>
			</and>
		</conditions>
		<actions>
			<do-if>
				<arg-conditions>
					<or>
						<if-op-attr name="~drv.acctTrk.statusAttr~" op="available"/>
						<if-operation mode="case" op="not-equal">modify</if-operation>
					</or>
				</arg-conditions>
				<arg-actions>
					<do-set-local-variable name="ObjectDN" scope="policy">
						<arg-node-set>
							<token-query scope="entry">
								<arg-association>
									<token-association/>
								</arg-association>
							</token-query>
						</arg-node-set>
					</do-set-local-variable>
					<do-if>
						<arg-conditions>
							<and>
								<if-xpath op="true">string-length($ObjectDN) > 0</if-xpath>
							</and>
						</arg-conditions>
						<arg-actions>
							<do-set-op-property name="AccountTracking-ObjectDN">
								<arg-string>
									<token-xpath expression="$ObjectDN/@src-dn"/>
								</arg-string>
							</do-set-op-property>
						</arg-actions>
						<arg-actions/>
					</do-if>
				</arg-actions>
			</do-if>
		</actions>
	</rule>
	<rule>
		<description>AccountTracking - add interested properties to current doc for future use.</description>
		<conditions>
			<and>
				<if-operation mode="regex" op="equal">add|modify|delete|rename|move|status</if-operation>
			</and>
		</conditions>
		<actions>
			<do-for-each>
				<arg-node-set>
					<token-global-variable name="drv.acctTrk.identifiers"/>
				</arg-node-set>
				<arg-actions>
					<do-if>
						<arg-conditions>
							<and>
								<if-local-variable mode="nocase" name="current-node" op="equal">LDAPDN</if-local-variable>
								<if-op-property name="AccountTracking-$current-node$" op="not-available"/>
								<if-src-dn op="available"/>
							</and>
						</arg-conditions>
						<arg-actions>
							<do-set-op-property name="AccountTracking-$current-node$">
								<arg-string>
									<token-src-dn/>
								</arg-string>
							</do-set-op-property>
						</arg-actions>
						<arg-actions>
							<do-if>
								<arg-conditions>
									<and>
										<if-local-variable mode="nocase" name="current-node" op="equal">association</if-local-variable>
										<if-op-property name="AccountTracking-$current-node$" op="not-available"/>
										<if-association op="available"/>
									</and>
								</arg-conditions>
								<arg-actions>
									<do-set-op-property name="AccountTracking-$current-node$">
										<arg-string>
											<token-association/>
										</arg-string>
									</do-set-op-property>
								</arg-actions>
								<arg-actions>
									<do-if>
										<arg-conditions>
											<and>
												<if-op-property name="AccountTracking-$current-node$" op="not-available"/>
												<if-op-attr name="$current-node$" op="available"/>
											</and>
										</arg-conditions>
										<arg-actions>
											<do-set-op-property name="AccountTracking-$current-node$">
												<arg-string>
													<token-op-attr name="$current-node$"/>
												</arg-string>
											</do-set-op-property>
										</arg-actions>
										<arg-actions>
											<do-if>
												<arg-conditions>
													<and>
														<if-operation mode="case" op="equal">rename</if-operation>
														<if-op-property name="AccountTracking-$current-node$" op="not-available"/>
													</and>
												</arg-conditions>
												<arg-actions>
													<do-set-op-property name="AccountTracking-$current-node$">
														<arg-string>
															<token-src-name/>
														</arg-string>
													</do-set-op-property>
												</arg-actions>
												<arg-actions/>
											</do-if>
										</arg-actions>
									</do-if>
								</arg-actions>
							</do-if>
						</arg-actions>
					</do-if>
				</arg-actions>
			</do-for-each>
		</actions>
	</rule>
	<rule>
		<description>AccountTracking - Initialize status properties on published events</description>
		<conditions>
			<and>
				<if-operation mode="regex" op="equal">add|modify|delete|rename|move</if-operation>
			</and>
		</conditions>
		<actions>
			<do-set-local-variable name="var-idvAccountStatus" scope="policy">
				<arg-string>
					<token-text xml:space="preserve">-</token-text>
				</arg-string>
			</do-set-local-variable>
			<do-set-local-variable name="var-appAccountStatus" scope="policy">
				<arg-string>
					<token-text xml:space="preserve">-</token-text>
				</arg-string>
			</do-set-local-variable>
			<do-if>
				<arg-conditions>
					<and>
						<if-op-attr name="~drv.acctTrk.statusAttr~" op="available"/>
					</and>
				</arg-conditions>
				<arg-actions>
					<do-set-op-property name="AccountTracking-AccountStatusChanged">
						<arg-string>
							<token-text xml:space="preserve">true</token-text>
						</arg-string>
					</do-set-op-property>
					<do-if>
						<arg-conditions>
							<and>
								<if-op-attr mode="nocase" name="~drv.acctTrk.statusAttr~" op="equal">~drv.acctTrk.activeStatus~</if-op-attr>
							</and>
						</arg-conditions>
						<arg-actions>
							<do-set-local-variable name="var-appAccountStatus" scope="policy">
								<arg-string>
									<token-text xml:space="preserve">A</token-text>
								</arg-string>
							</do-set-local-variable>
						</arg-actions>
						<arg-actions>
							<do-if>
								<arg-conditions>
									<and>
										<if-op-attr mode="nocase" name="~drv.acctTrk.statusAttr~" op="equal">~drv.acctTrk.inactiveStatus~</if-op-attr>
									</and>
								</arg-conditions>
								<arg-actions>
									<do-set-local-variable name="var-appAccountStatus" scope="policy">
										<arg-string>
											<token-text xml:space="preserve">I</token-text>
										</arg-string>
									</do-set-local-variable>
								</arg-actions>
								<arg-actions>
									<do-set-local-variable name="var-appAccountStatus" scope="policy">
										<arg-string>
											<token-text xml:space="preserve">U</token-text>
										</arg-string>
									</do-set-local-variable>
								</arg-actions>
							</do-if>
						</arg-actions>
					</do-if>
				</arg-actions>
				<arg-actions>
					<do-if>
						<arg-conditions>
							<and>
								<if-operation mode="case" op="equal">add</if-operation>
							</and>
						</arg-conditions>
						<arg-actions>
							<do-set-local-variable name="var-appAccountStatus" scope="policy">
								<arg-string>
									<token-global-variable name="drv.acctTrk.idvDefaultStatus"/>
								</arg-string>
							</do-set-local-variable>
						</arg-actions>
						<arg-actions/>
					</do-if>
				</arg-actions>
			</do-if>
			<do-set-op-property name="AccountTracking-IdvAccountStatus">
				<arg-string>
					<token-local-variable name="var-idvAccountStatus"/>
				</arg-string>
			</do-set-op-property>
			<do-set-op-property name="AccountTracking-AppAccountStatus">
				<arg-string>
					<token-local-variable name="var-appAccountStatus"/>
				</arg-string>
			</do-set-op-property>
		</actions>
	</rule>
	<rule>
		<description>AccountTracking - Change account status properties of IDV and application</description>
		<comment xml:space="preserve">The entitlement regrant operation required update in the account status.The IDV account status should be 'A' and application status should be '-'</comment>
		<conditions>
			<and>
				<if-operation mode="case" op="equal">status</if-operation>
				<if-op-property mode="nocase" name="accountAction" op="equal">accountEnableByEntitlementGrant</if-op-property>
				<if-op-property mode="nocase" name="AccountTracking-IdvAccountStatus" op="equal">-</if-op-property>
				<if-op-property mode="nocase" name="AccountTracking-AppAccountStatus" op="equal">A</if-op-property>
			</and>
		</conditions>
		<actions>
			<do-set-op-property name="AccountTracking-AppAccountStatus">
				<arg-string>
					<token-text xml:space="preserve">-</token-text>
				</arg-string>
			</do-set-op-property>
			<do-set-op-property name="AccountTracking-IdvAccountStatus">
				<arg-string>
					<token-text xml:space="preserve">A</token-text>
				</arg-string>
			</do-set-op-property>
		</actions>
	</rule>
</policy>